{
  "name": "noxa-music-mobile",
  "version": "1.0.1",
  "description": "Noxa Music - Mobile App (Capacitor wrapper for React web app)",
  "private": true,
  "scripts": {
    "build:web": "cd ../React && npm run build && rm -rf ../mobile/www && cp -r dist ../mobile/www",
    "sync": "npx cap sync",
    "sync:android": "npx cap sync android",
    "sync:ios": "npx cap sync ios",
    "open:android": "npx cap open android",
    "open:ios": "npx cap open ios",
    "run:android": "npx cap run android",
    "run:ios": "npx cap run ios",
    "build:android": "cd android && chmod +x ./gradlew && ./gradlew assembleRelease",
    "build:android:debug": "cd android && chmod +x ./gradlew && ./gradlew assembleDebug",
    "build:android:aab": "cd android && chmod +x ./gradlew && ./gradlew bundleRelease",
    "update": "npm run build:web && npm run sync",
    "dev:android": "npm run sync:android && npm run run:android",
    "dev:ios": "npm run sync:ios && npm run run:ios"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/filesystem": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/network": "^6.0.0",
    "@capacitor/preferences": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}

